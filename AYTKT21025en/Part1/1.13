Dockerfile
==========

FROM openjdk

WORKDIR /spring-example-project

RUN  yum install -y git

RUN git clone https://github.com/docker-hy/spring-example-project.git /spring-example-project
RUN ./mvnw package

EXPOSE 8080

ENTRYPOINT java -jar ./target/docker-example-1.1.3.jar

CMD ["/bin/bash"]



